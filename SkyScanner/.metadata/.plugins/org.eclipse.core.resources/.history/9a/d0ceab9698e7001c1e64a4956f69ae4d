import java.util.Scanner;

public class Test {
	public static void main(String[] args) {
		
		
		  Scanner sc = new Scanner(System.in);      
	      System.out.println("숫자 입력 :");      
	      int num = sc.nextInt();
	      
	      int sec = 0 ;
	      int min = 0;
	      int hr = 0;
	      
	      if(num < 3600) {
	         sec = num % 60;
	         min = num / 60;
	         
	   
	      }else if(num >= 3600)  {
	         sec = num % 60;
	         min = (num/60) % 60;
	         hr = (num/60) / 60;
	      }
	   
	      System.out.println(hr+"시간"+min+"분"+sec+"초");

		
	}
}
